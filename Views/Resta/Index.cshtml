@{
    ViewData["Title"] = "Resta";
}

<style>
    body {
        background: #f4f4f4;
        font-family: Arial, Helvetica, sans-serif;
    }

    .card {
        background: white;
        padding: 40px;
        border-radius: 15px;
        width: 400px;
        margin: 80px auto;
        text-align: center;
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    h2 {
        color: #764ba2;
        margin-bottom: 25px;
    }

    input {
        width: 80%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    button {
        background: #667eea;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 10px;
        transition: 0.3s;
    }

    button:hover {
        background: #764ba2;
    }

    .resultado {
        margin-top: 20px;
        font-size: 20px;
        font-weight: bold;
        color: #333;
    }
</style>

<div class="card">
    <h2>Calculadora - Resta</h2>

    <form asp-action="Calcular" method="post">
        <input type="number" name="numero1" placeholder="Primer número" required />
        <input type="number" name="numero2" placeholder="Segundo número" required />
        <br />
        <button type="submit">Restar</button>
    </form>

    @if (ViewBag.Resultado != null)
    {
        <div class="resultado">
            Resultado: @ViewBag.Resultado
        </div>
    }
</div>