@model J.M.K20260224.Models.Operacion

@{
    ViewData["Title"] = "Resta";
}

<style>
    body {
        background: #f4f4f4;
        font-family: Arial, Helvetica, sans-serif;
    }

    .card {
        background: white;
        padding: 40px;
        border-radius: 15px;
        width: 400px;
        margin: 80px auto;
        text-align: center;
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    h2 {
        color: #764ba2;
        margin-bottom: 25px;
    }

    .input-numero {
        width: 80%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 16px;
        text-align: center;
    }

    .btn-calcular {
        background: #667eea;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 10px;
        transition: 0.3s;
    }

        .btn-calcular:hover {
            background: #764ba2;
        }

    .resultado {
        margin-top: 20px;
        font-size: 20px;
        font-weight: bold;
        color: #333;
    }
</style>

<div class="card">
    <h2>Calculadora - Resta</h2>

    <form asp-action="Calcular" method="post">
        <input asp-for="Numero1" type="number" step="any" class="input-numero" placeholder="Primer numero" required />
        <input asp-for="Numero2" type="number" step="any" class="input-numero" placeholder="Segundo numero" required />
        <br />
        <button type="submit" class="btn-calcular">Restar</button>
    </form>

    @if (Model?.Numero1 != null && Model?.Numero2 != null)
    {
        <div class="resultado">
            Resultado: @Model.Resultado
        </div>
    }
</div>