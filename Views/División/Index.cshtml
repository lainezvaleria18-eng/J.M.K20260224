@{
    ViewData["Title"] = "División Pro";
}

<style>
    /* Estilos personalizados para que se vea genial */
    .division-container {
        max-width: 450px;
        margin: 50px auto;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

        .division-container:hover {
            transform: translateY(-5px);
        }

    .card-header-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        text-align: center;
        border: none;
    }

    .btn-calculate {
        background: #764ba2;
        border: none;
        color: white;
        padding: 10px;
        font-weight: bold;
        transition: background 0.3s;
    }

        .btn-calculate:hover {
            background: #5a3782;
            color: #efefef;
        }

    .result-box {
        background-color: #f8f9fa;
        border-left: 5px solid #764ba2;
        padding: 15px;
        margin-top: 20px;
        border-radius: 5px;
    }

    .error-box {
        background-color: #fff5f5;
        border-left: 5px solid #fc8181;
        color: #c53030;
        padding: 15px;
        margin-top: 20px;
        border-radius: 5px;
    }
</style>

<div class="division-container card">
    <div class="card-header-custom">
        <h2 class="mb-0">Calculadora de División</h2>
        <small>Ingresa los valores abajo</small>
    </div>

    <div class="card-body p-4">
        <form asp-action="CalcularDivision" method="post">
            <div class="mb-4">
                <label class="form-label fw-bold">Dividendo</label>
                <input type="number" step="any" name="num1" class="form-control form-control-lg" placeholder="0.00" required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Divisor</label>
                <input type="number" step="any" name="num2" class="form-control form-control-lg" placeholder="0.00" required />
            </div>

            <button type="submit" class="btn btn-calculate w-100 btn-lg shadow-sm">
                Calcular Resultado
            </button>
        </form>

        @if (ViewBag.Resultado != null)
        {
            <div class="result-box animate_animated animate_fadeIn">
                <h5 class="mb-1 text-muted">Resultado:</h5>
                <h3 class="text-primary mb-0">@ViewBag.Resultado</h3>
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="error-box animate_animated animate_shakeX">
                <strong>¡Atención!</strong> @ViewBag.Error
            </div>
        }
    </div>
</div>